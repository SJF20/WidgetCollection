<LinearLayout android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="15dp"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:visibility="gone">

        <com.shijingfeng.library.widget.ProgressRing
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:layout_marginEnd="15dp"
            app:backgroundRingColor="@color/colorAccent"
            app:curProgress="15"
            app:customText="%progress%"
            app:progressDirection="cw"
            app:progressType="percent"
            app:ringColor="@color/colorPrimaryDark"
            app:startPosition="top"
            app:textBold="true"
            app:textColor="@color/colorPrimary"
            app:textSize="17sp"
            app:textVisible="true"
            app:thickness="7dp"
            app:totalProgress="100" />

        <com.shijingfeng.library.widget.MarkerView
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:layout_marginEnd="15dp"
            app:text="重要"
            app:textSize="15sp"
            app:bgColor="@color/colorPrimaryDark" />

        <com.shijingfeng.library.widget.IsoscelesTriangleView
            android:layout_width="65dp"
            android:layout_height="65dp"
            app:isosceles_triangle_style="bottom_to_top"
            app:color="@color/colorPrimaryDark"/>

    </LinearLayout>

    <com.shijingfeng.library.widget.LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:visibility="gone"
        android:background="#FF0000">

        <TextView
            android:layout_width="1000dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginEnd="10dp"
            android:padding="10dp"
            android:background="#00FF00"
            android:text="第一行" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:background="#0000FF"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:text="第二行" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:background="#BEBEBE"
            android:text="第三行" />

    </com.shijingfeng.library.widget.LinearLayout>

    <com.shijingfeng.library.widget.FlowLayout
        android:id="@+id/fl_one"
        android:visibility="gone"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:background="#FF0000"
        app:flowGravity="center"
        app:flowOrientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="#0000FF"
            android:padding="10dp"
            android:text="你好搞好公共号" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#00FF00"
            android:padding="20dp"
            android:layout_marginEnd="10dp"
            android:text="霎哈嘎哈" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            android:padding="10dp"
            android:text="gssgagjapgh" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#BEBEBE"
            android:padding="20dp"
            android:text="傻噶哈" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#FF0FF0"
            android:layout_marginStart="20dp"
            android:padding="10dp"
            android:text="傻瓜哈嘎规划评价安排gap给" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@color/colorAccent"
            android:padding="40dp"
            android:text="哈哟广大后的古巴了哈嘎哈公道话i落后i哈哈够爱哦哈够爱会搞混后i阿红改好后后好贵啊gap干哈后i更好欧鸿啊哦吼干哈红红" />

    </com.shijingfeng.library.widget.FlowLayout>

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.shijingfeng.library.widget.FlowLayout
            android:id="@+id/fl_two"
            android:layout_width="wrap_content"
            android:layout_height="400dp"
            android:layout_marginTop="15dp"
            android:padding="30dp"
            android:background="#FF0000"
            app:flowGravity="center"
            app:flowOrientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#0000FF"
                android:padding="20dp"
                android:text="你好搞好公共号" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#00FF00"
                android:padding="10dp"
                android:text="霎哈嘎哈" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimary"
                android:padding="10dp"
                android:text="gssgagjapgh" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#BEBEBE"
                android:padding="20dp"
                android:text="傻噶哈" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#FF0FF0"
                android:padding="10dp"
                android:text="傻瓜哈嘎规划评价安排gap给" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/colorAccent"
                android:padding="10dp"
                android:text="哈哟广大后的古巴了哈嘎哈公道话i落后i哈沙盘抛" />

            <View
                android:layout_width="30dp"
                android:layout_height="300dp"
                android:background="#AAAAAA" />

        </com.shijingfeng.library.widget.FlowLayout>

    </HorizontalScrollView>

</LinearLayout>